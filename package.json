{
    "name": "wallet-srv",
    "description": "based on Nest TypeScript starter repository",
    "license": "MIT",
    "scripts": {
        "start": "ts-node src/main",
        "nodemon": "ts-node-dev src/main",
        "node-dev": "ts-node-dev src/main",
        "prepare": "patch-package",
        "prestart:prod": "copyfiles src/public/* dist/ ; tsc",
        "clean": "./node_modules/.bin/del-cli dist www/docs database/sqlitedb.db",
        "start:dev": "cross-env DB_SOURCE_EXT=ts ts-node-dev src/main",
        "start:prod": "cross-env NODE_ENV=production ./node_modules/.bin/pm2 start dist/src/main.js --name mellow",
        "start:hmr": "cross-env NODE_ENV=production node dist/main.hmr.js",
        "stop": "./node_modules/.bin/pm2 kill",
        "logs": "./node_modules/.bin/pm2 logs",
        "logs:flush": "./node_modules/.bin/pm2 flush",
        "test": "jest",
        "test:watch": "jest --watch --config=jest.json",
        "test:coverage": "jest --config=jest.json --coverage --coverageDirectory=coverage",
        "e2e": "jest --config=e2e/jest-e2e.json --forceExit",
        "e2e:watch": "jest --watch --config=e2e/jest-e2e.json",
        "pretty": "prettier --write package.json **/tests/*.ts **/tests/**/*.ts **/src/**/*.ts **/src/*.ts",
        "lint": "tslint --fix --config tslint.json --project tsconfig.json",
        "precommit_with_test": "lint-staged && npm test",
        "precommit": "lint-staged"
    },
    "dependencies": {
        "@nestjs/common": "^5.3.0",
        "@nestjs/core": "^5.3.0",
        "@nestjs/microservices": "^5.3.0",
        "@nestjs/swagger": "^2.4.4",
        "@nestjs/websockets": "^5.5.0",
        "bcrypt": "^5.0.0",
        "bignumber.js": "^8.0.1",
        "bip32": "^1.0.2",
        "bip39": "^2.5.0",
        "bitcoin-core": "^2.0.0",
        "bitcoinjs-lib": "^4.0.2",
        "class-transformer": "^0.1.7",
        "class-validator": "^0.7.2",
        "dotenv": "^6.0.0",
        "eth-ens-namehash": "latest",
        "ethereumjs-util": "^6.0.0",
        "express-rate-limit": "^3.3.2",
        "hdkey": "^1.1.0",
        "helmet": "^3.15.0",
        "husky": "^2.2.0",
        "joi": "^14.1.0",
        "lint-staged": "^8.1.6",
        "loadsh": "0.0.3",
        "morgan": "^1.9.1",
        "pg": "^7.6.1",
        "prettier": "^1.15.2",
        "reflect-metadata": "^0.1.12",
        "rxjs": "^6.0.0",
        "scrypt": "^6.0.3",
        "solc": "^0.5.1",
        "ts-jest": "^24.0.2",
        "typescript": "^3.4.5",
        "web3": "^1.0.0-beta.54",
        "websocket": "^1.0.28",
        "winston": "^3.1.0"
    },
    "devDependencies": {
        "@nestjs/testing": "^5.4.1",
        "@types/bcrypt": "^3.0.0",
        "@types/bip32": "^1.0.0",
        "@types/bip39": "^2.4.1",
        "@types/bitcoinjs-lib": "^4.0.0",
        "@types/crypto-js": "^3.1.43",
        "@types/dotenv": "^6.0.0",
        "@types/ethereumjs-util": "^5.2.0",
        "@types/jest": "^24.0.12",
        "@types/jest-expect-message": "^1.0.0",
        "@types/joi": "^14.0.0",
        "@types/lodash": "^4.14.119",
        "@types/node": "^7.10.2",
        "@types/socket.io": "^2.1.2",
        "@types/socket.io-client": "^1.4.32",
        "@types/supertest": "^2.0.7",
        "@types/web3": "^1.0.18",
        "copyfiles": "^2.1.0",
        "cross-env": "^5.2.0",
        "ethereum-tx-decoder": "^2.0.1",
        "ethereumjs-tx": "^2.0.0",
        "frisby": "^2.1.1",
        "jest": "^24.7.1",
        "jest-expect-message": "^1.0.2",
        "node-fetch": "^2.3.0",
        "patch-package": "^5.1.1",
        "pm2": "^3.2.3",
        "rskjs-util": "^1.0.3",
        "supertest": "^3.3.0",
        "ts-node": "^6.0.0",
        "ts-node-dev": "^1.0.0-pre.31",
        "tslint": "^5.9.1"
    },
    "prettier": {
        "tabWidth": 4,
        "singleQuote": true,
        "printWidth": 100
    },
    "lint-staged": {
        "*.{ts, tsx}": [
            "tslint",
            "git add"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    }
}
